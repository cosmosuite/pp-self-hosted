generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Detection {
  id              String   @id @default(uuid())
  customerId      String?  @map("customer_id")
  imageUrl        String?  @map("image_url")
  imageDimensions Json     @map("image_dimensions")
  detections      Json
  detectionCount  Int      @map("detection_count")
  riskLevel       String   @map("risk_level")
  thresholdUsed   Float    @map("threshold_used")
  createdAt       DateTime @default(now()) @map("created_at")

  @@map("detections")
}

model UsageLog {
  id         String   @id @default(uuid())
  customerId String   @map("customer_id")
  featureId  String   @default("detections") @map("feature_id")
  delta      Int      @default(1)
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("usage_logs")
}
